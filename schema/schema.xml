<email name="signup" to="$user.email">
  Welcome this is the shit

  Are you ready?
</email>

<action name="user/create">
  <filters>
    <filter name="setup">
    <filter name="auth">
  </filters>
  <validate object="values">
    <object name="values">
      <check name="name" minlength="2">
      <check name="email" is="$email">
    </object>
  </validate>
  <allow>
    <object name="values">
      <item name="name">
      <item name="email">
    </object>
  </allow>
  <set>
    <object name="values" key="user_id" value="$user.id">
    <object name="values" key="published" value="true">
  </set>
  <db model="user" type="create">
  <mail name="signup">

</action>

