{
  "filters": ["setup", "auth"],
  "validate": {
    "values.name.minlength": 2,
    "values.name.email": "$email"
  },
  "allow": [
    "values.name",
    "values.email"
  ],
  "set": {
    "values.user_id": "$user.id",
    "values.password": "$encrypt"
  },
  "when": {
    "values.name.eq": "vidar@eldoy.com",
    "set": {
      "values.published": true
    }
  },
  "db": {
    "path": "user.create"
  },
  "mail": {
    "name": "signup"
  },
  "keep": ["id"]
}
